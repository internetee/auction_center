<%= turbo_frame_tag "notifications" do %>
  <div style='position: relative; display: flex; flex-direction: column; justify-content: center; align-items: center; cursor: pointer;' 
       data-controller='notification-dropdown update_notifications' data-update_notifications-url-value="<%= mark_as_read_notifications_path(format: :turbo_stream) %>"
       data-notification-dropdown-dropdown-class="dropdown-custom" data-notification-dropdown-bell-class="bell-broadcast">

    <div id='bell-broadcast' class='bell-broadcast'>
      <%= render partial: 'bell', locals: { any_unread: current_user&.notifications&.any?(&:unread?) } %>
    </div>

    <div style='position: absolute; top: 40px; right: -60px; border: 2px solid green; background: MediumSeaGreen; color: white; overflow-y: auto; margin-bottom: 30px; visibility: hidden;' data-notification-dropdown-target='menu' class='dropdown-custom'>
      <ul id='notifications-list' style='list-style-type: none; padding: 0; margin: 0; width: 350px; max-height: 600px; word-break: break-word;' >

        <% if @notifications.blank? %>
          <li style='padding: 10px 20px; display: flex; flex-direction: column; width: 100%;'>
            <p style='margin-top: 10px; text-weight: bold; font-size: 20px; text-align: center;'>
              <%= I18n.t('.no_any_notifications') %>
            </p>
          </li>
        <% else %>
          <%= render @notifications %>
        <% end %>
          
      </ul>
    </div>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <div class="card shadow-sm">
        <div class="card-body py-5">
          <div class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
            </svg>
          </div>

          <h2 class="mb-3"><%= t('mobile_payments.payment_successful') %></h2>
          <p class="text-muted mb-4"><%= t('mobile_payments.payment_processed') %></p>

          <div class="alert alert-info" role="alert">
            <small><%= t('mobile_payments.close_window_instruction') %></small>
          </div>

          <button type="button" class="btn btn-primary mt-3" onclick="window.close()">
            <%= t('mobile_payments.close_window') %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<% unless flash.empty? %>
  <div id="flash" data-turbo-temporary>
    <% flash.each do |key, value| -%>
        <% next if value.blank? || value == true %>

        <% if key == 'alert' || key == 'recaptcha_error' %>
          <turbo-stream action="toast" message="<%= h value %>" position="right" background='linear-gradient(90deg, #FF6E00 1.35%, #E66300 98.65%)'></turbo-stream>
        <% else %>
          <turbo-stream action="toast" message="<%= h value %>" position="right" background='#48A23F'></turbo-stream>
        <% end %>
    <% end %>
  </div>
<% end %>

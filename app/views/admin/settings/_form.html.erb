<%= form_with model: setting, url: url do |f| %>
  <div style='display: flex; align-items: center; gap: 0 20px; margin-bottom: 20px;'>
    <%= f.label :code, t('settings.code'), style: 'width: 150px;' %>
    <%= f.text_field :code, class: "form-control", value: setting.code, disabled: true %>
  </div>
  <div style='display: flex; align-items: center; gap: 0 20px; margin-bottom: 20px;'>
    <%= f.label :description, t('settings.description'), style: 'width: 150px;' %>
    <%= f.text_field :description, class: "form-control", value: setting.description %>
  </div>
  <div style='display: flex; align-items: center; gap: 0 20px; margin-bottom: 20px;'>
    <%= f.label :value, t('settings.value'), style: 'width: 150px;' %>
    <%= f.text_field :value, class: "form-control", value: setting.value %>
  </div>
  <br>
  <div style='padding: 1rem 0; display: flex; justify-content: end;'>
  <%= f.button t(:submit), class: "c-btn c-btn--blue", data: { turbo: false } %>
  </div>

  <div class="c-table__filters__btns" style='padding: 1rem 0; display: flex; justify-content: start;'>
    <%= link_to t(:back), :back, class: "c-btn c-btn--green" %>
  </div>
</div>
<% end %>

<div class="features-grid top green">
    <div class="overview">
        <div class="u-container">
            <span class="title"><%= t('.title')%> <strong id="auction_count"><%= Auction.active.count %></strong>.</span>
        </div>
    </div>
    <div class="u-container">
        <div class="items">
            <div class="item">
                <h3 class="ui icon header">
                    <i class="gift icon"></i>
                    <div class="content">
                        <%= t('.1_step_header') %>
                        <div class="sub header"><%= t('.1_step_explanation') %></div>
                    </div>
                </h3>
            </div>
            <div class="item">
                <h3 class="ui icon header">
                    <i class="stopwatch icon"></i>
                    <div class="content">
                        <%= t('.2_step_header') %>
                        <div class="sub header"><%= t('.2_step_explanation') %></div>
                    </div>
                </h3>
            </div>
            <div class="item">
                <h3 class="ui icon header">
                    <i class="credit card outline icon"></i>
                    <div class="content">
                        <div class="content">
                            <%= t('.3_step_header') %>
                            <div class="sub header"><%= t('.3_step_explanation') %></div>
                        </div>
                    </div>
                </h3>
            </div>
        </div>
        <div class="text">
            <p><strong><%= t(".please_note") %></strong></p>
            <p><%= t(".footer_html",
                     terms_and_conditions_link: link_to(t(".terms_and_conditions_link"),
                                                        Setting.find_by(code: 'terms_and_conditions_link').retrieve),
                     faq_link: link_to(t(".faq_link"), faq_link)) %></p>
        </div>
    </div>
</div>

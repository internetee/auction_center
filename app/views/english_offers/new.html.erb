<% content_for :hero do %>
    <div class="hero green">
        <h1><%= t('.title') %></h1>
        <div class="monospace"><%= @offer.auction.domain_name %></div>
    </div>
<% end %>

<div class="u-container">
    <div class="u-container margin-block">
        <% if @offer.errors.any? %>
            <div class="ui message">
                <div class="header">
                    <%= t(:errors_name) %>
                </div>
                <ul id="errors">
                    <% @offer.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <%= render 'form', offer: @offer, url: auction_english_offers_path(auction_uuid: params[:auction_uuid]), data: { turbo: false } %>
        <% url = @autobider.new_record? ? autobider_index_path : autobider_path(uuid: @autobider.uuid)  %>
        <%= render partial: 'autobider', locals: { offer: @offer, autobider: @autobider, url: url } %>
    </div>
</div>

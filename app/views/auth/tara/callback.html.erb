<% content_for :hero do %>
    <div class="hero green">
        <h1><%= t('.title') %></h1>
    </div>
<% end %>

<div class="u-container">
    <div class="u-container margin-block">
        <div class="u-container margin-block">
            <% if @user.errors.any? %>
                <div class="ui message">
                    <div class="header">
                        <%= pluralize(@user.errors.count, "error") %> <%= t('.errors') %>
                    </div>
                    <ul id="errors">
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <%= render 'form', user: @user, url: tara_create_path %>
        </div>
    </div>
</div>

<%= stylesheet_pack_tag 'stylesheets/users', media: 'all', 'data-turbolinks-track': 'reload' %>
